@using Bookstore.App.Models
@model List<Customer>

@{
    ViewBag.Title = "Index";
}

<h2>List of customers</h2>


@{

    string tableColor = "";

    if (Model.Count < 5)
    {
        tableColor = "table-danger";
    }
    else
    {
        tableColor = "table-primary";
    }

}

<table class="table @tableColor">
    <thead>
        <tr>
            <th>Link</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Customer customer in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Link",
                        "Details",
                        "Customer",
                        new { id = customer.Id },
                        new { @class = "btn btn-primary" })
                </td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
            </tr>
        }

    </tbody>
</table>
