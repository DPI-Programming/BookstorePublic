@model Bookstore.App.Models.Customer

@{
    ViewBag.Title = "Details";    
}

<h2>@Model.FirstName @Model.LastName Details</h2>

@Html.ActionLink("Edit Customer", "Edit", "Customer", new {id = Model.Id}, new {@class = "btn btn-primary"})

@if (Model.DateOfBirth != null)
{
    <p>Age: @Model.DateOfBirth.Value.ToShortDateString()</p>
}
else
{
    <p>Age Not Provided</p>
}


